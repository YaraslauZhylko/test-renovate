{
  "hostRules": [
    // {
    //   "baseUrl": "https://pypi.fury.io/dialogue/",
    //   "encrypted": {
    //     "username": ""
    //   },
    //   "password": "",
    //   "enabled": false
    // }
  ],
  "extends": [
    // PR naming
    ":semanticCommits",
    ":semanticCommitType(chore)",
    ":label(dependencies)",
    // PR control
    ":prImmediately",
    ":rebaseStalePrs",
    ":automergeDisabled",
    // Scheduling and limits
    ":maintainLockFilesWeekly",
    ":disableRateLimiting"
  ],
  // Branch names and PR labels
  "circleci": {
    "additionalBranchPrefix": "circleci/",
    "addLabels": ["circleci"]
  },
  "docker": {
    "additionalBranchPrefix": "docker/",
    "addLabels": ["docker"]
  },
  "poetry": {
    "additionalBranchPrefix": "python/",
    "addLabels": ["python"]
  },
  "pre-commit": {
    "additionalBranchPrefix": "pre-commit/",
    "addLabels": ["pre-commit"],
    "enabled": true  // explicitly enable experimental manager
  },
  // Per-package settings
  "packageRules": [
    // // PR scopes
    // {
    //   "matchDepTypes": ["dependencies"],
    //   "semanticCommitScope": "deps"
    // },
    // {
    //   "matchDepTypes": ["devDependencies"],
    //   "semanticCommitScope": "deps-dev"
    // },
    // {
    //   "matchDepTypes": ["peerDependencies"],
    //   "semanticCommitScope": "deps-peer"
    // },
    // Ignore specific packages
    {
      "matchPackageNames": ["arrow"],
      "enabled": false
    },
    {
      "matchPackageNames": ["fastapi-sqla", "pyramid"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ]
}
