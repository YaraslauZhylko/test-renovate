{
  "enabledManagers": [
    "circleci",
    "dockerfile",
    "poetry",
    "pre-commit"
  ],
  "hostRules": [
    // {
    //   "baseUrl": "https://pypi.fury.io/dialogue/",
    //   "encrypted": {
    //     "username": ""
    //   },
    //   "password": "",
    //   "enabled": false
    // }
  ],
  "extends": [
    // Pinning strategy
    ":pinVersions",
    // PR naming
    ":semanticCommits",
    ":semanticCommitType(chore)",
    ":labels(dependencies)",
    // PR control
    ":prImmediately",
    ":rebaseStalePrs",
    ":automergeDisabled",
    // Scheduling and limits
    ":maintainLockFilesWeekly",
    ":disableRateLimiting",
    // Other
    ":enablePreCommit"
  ],
  "packageRules": [
    // PR scopes
    {
      "matchDepTypes": ["dependencies"],
      "semanticCommitScope": "deps"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "semanticCommitScope": "deps-dev"
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "semanticCommitScope": "deps-peer"
    },
    // PR branch names and labels
    {
      "matchManagers": ["circleci"],
      "additionalBranchPrefix": "circleci",
      "addLabels": ["circleci"]
    },
    {
      "matchManagers": ["dockerfile"],
      "additionalBranchPrefix": "docker",
      "addLabels": ["docker"]

    },
    {
      "matchManagers": ["poetry"],
      "additionalBranchPrefix": "python",
      "addLabels": ["python"]
    },
    {
      "matchManagers": ["pre-commit"],
      "additionalBranchPrefix": "pre-commit",
      "addLabels": ["pre-commit"]

    },
    // Ignore specific packages
    {
      "packageNames": ["arrow"],
      "enabled": false
    },
    {
      "packageNames": ["fastapi-sqla", "pyramid"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ]
}
