{
  "enabledManagers": [
    "circleci",
    "dockerfile",
    "poetry",
    "pre-commit"
  ],
  "hostRules": [
    {
      "baseUrl": "https://pypi.fury.io/dialogue/",
      "encrypted": {
        "username": ""
      },
      "password": ""
    }
  ],
  "extends": [
    // Version pinning
    ":autodetectPinVersions",
    ":pinDependencies",
    ":pinDevDependencies",
    // PR control
    ":prImmediately",
    ":rebaseStalePrs",
    ":renovatePrefix",
    ":semanticCommits",
    ":automergeDisabled",
    // Scheduling and limits
    ":maintainLockFilesWeekly",
    ":disableRateLimiting",
    // Other
    ":enablePreCommit"
  ],
  // PR types and scopes
  "semanticCommitType": "chore",
  "packageRules": [
    {
      "matchDepTypes": ["dependencies"],
      "semanticCommitScope": "deps"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "semanticCommitScope": "deps-dev"
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "semanticCommitScope": "deps-peer"
    }
  ],
  // PR labels
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchManagers": ["circleci"],
      "addLabels": ["circleci"]
    },
    {
      "matchManagers": ["dockerfile"],
      "addLabels": ["docker"]

    },
    {
      "matchManagers": ["poetry"],
      "addLabels": ["python"]

    },
    {
      "matchManagers": ["pre-commit"],
      "addLabels": ["pre-commit"]

    }
  ],
  // Ignore specific packages
  "packageRules": [
    {
      "packageNames": ["arrow"],
      "enabled": false
    },
    {
      "packageNames": ["fastapi-sqla", "pyramid"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ]
}
