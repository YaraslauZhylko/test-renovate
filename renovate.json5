{
  "hostRules": [
  ],
  "extends": [
    ":semanticCommits",
    ":semanticCommitType(chore)",
    ":semanticCommitScope(deps)",
    ":label(dependencies)",
    ":prImmediately",
    ":rebaseStalePrs",
    ":automergeDisabled",
    ":disableRateLimiting"
  ],
  "circleci": {
    "enabled": true,
    "additionalBranchPrefix": "circleci/",
    "semanticCommitScope": "deps-ci",
    "addLabels": ["circleci"],
    "packageRules": [
      {
        "description": "All orbs in one PR",
        "matchPackagePatterns": ["*"],
        "groupName": "circleci orbs",
        "groupSlug": "all-orbs"
      }
    ]
  },
  "docker": {
    "enabled": true,
    "additionalBranchPrefix": "docker/",
    "addLabels": ["docker"],
    "separateMultipleMajor": true,
    "separateMajorMinor": true,
    "separateMinorPatch": true
  },
  "python": {
    "enabled": true,
    "additionalBranchPrefix": "python/",
    "addLabels": ["python"],
    "packageRules": [
      {
        "description": "All dev dependencies in one PR",
        "matchDepTypes": ["dev-dependencies"],
        "groupName": "python dev dependencies",
        "groupSlug": "all-dev-dependencies",
        "semanticCommitScope": "deps-dev"
      },
      {
        "description": "Ignore 'arrow' updates till it is properly migrated",
        "matchPackageNames": ["arrow"],
        "enabled": false
      },
      {
        "description": "Ignore 'fastapi-sqla' updates till it is properly migrated",
        "matchPackageNames": ["fastapi-sqla"],
        "matchUpdateTypes": ["major"],
        "enabled": false
      },
      {
        "description": "Ignore 'pyramid' updates till it is properly migrated",
        "matchPackageNames": ["pyramid"],
        "matchUpdateTypes": ["major"],
        "enabled": false
      }
    ],
    "lockFileMaintenance": {
      "enabled": true
    }
  },
  "pre-commit": {
    "enabled": true,
    "additionalBranchPrefix": "pre-commit/",
    "semanticCommitScope": "deps-dev",
    "addLabels": ["pre-commit"],
    "versioning": "loose",
    "packageRules": [
      {
        "description": "All pre-commit hooks in one PR",
        "matchPackagePatterns": ["*"],
        "groupName": "pre-commit hooks",
        "groupSlug": "all-hooks"
      }
    ]
  },
  "packageRules": [
    {
      "description": "Allow 'black' updates",
      "matchPackageNames": ["black", "psf/black"],
      "versioning": "pep440",
      "ignoreUnstable": false
    }
  ]
}
