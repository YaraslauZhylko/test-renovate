{
  "hostRules": [
    // {
    //   "baseUrl": "https://pypi.fury.io/dialogue/",
    //   "encrypted": {
    //     "username": ""
    //   },
    //   "password": "",
    //   "enabled": false
    // }
  ],
  "extends": [
    ":semanticCommits",
    ":semanticCommitType(chore)",
    ":semanticCommitScope(deps)",
    ":label(dependencies)",
    ":prImmediately",
    ":rebaseStalePrs",
    ":automergeDisabled",
    ":disableRateLimiting"
  ],
  "circleci": {
    "enabled": true,
    "additionalBranchPrefix": "circleci/",
    "semanticCommitScope": "deps-dev",
    "addLabels": ["circleci"]
  },
  "docker": {
    "additionalBranchPrefix": "docker/",
    "addLabels": ["docker"]
  },
  "python": {
    "enabled": true,
    "additionalBranchPrefix": "python/",
    "addLabels": ["python"],
    "packageRules": [
      {
        "description": "Specific `deps-dev` scope for dev dependencies",
        "matchDepTypes": ["dev-dependencies"],
        "semanticCommitScope": "deps-dev"
      },
      {
        "description": "Ignore `arrow` updates till it is properly migrated",
        "matchPackageNames": ["arrow"],
        "enabled": false
      },
      {
        "description": "Ignore `fastapi-sqla` updates till it is properly migrated",
        "matchPackageNames": ["fastapi-sqla"],
        "matchUpdateTypes": ["major"],
        "enabled": false
      },
      {
        "description": "Ignore `pyramid` updates till it is properly migrated",
        "matchPackageNames": ["pyramid"],
        "matchUpdateTypes": ["major"],
        "enabled": false
      }
    ],
    "lockFileMaintenance": {
      "enabled": true
    }
  },
  "pre-commit": {
    "enabled": true,
    "additionalBranchPrefix": "pre-commit/",
    "semanticCommitScope": "deps-dev",
    "addLabels": ["pre-commit"],
    "versioning": "semver-coerced"
  },
  "packageRules": [
    {
      "groupName": "`black` dependency",
      "groupSlug": "black",
      "matchPackageNames": ["black", "psf/black"],
      "versioning": "pep440",
      "ignoreUnstable": false
    },
    {
      "groupName": "`isort` dependency",
      "groupSlug": "isort",
      "matchPackageNames": ["isort", "PyCQA/isort"]
    },
    {
      "groupName": "`eradicate` dependency",
      "groupSlug": "eradicate",
      "matchPackageNames": ["eradicate", "myint/eradicate"]
    },
    {
      "groupName": "`yamllint` dependency",
      "groupSlug": "yamllint",
      "matchPackageNames": ["yamllint", "adrienverge/yamllint"]
    },
  ]
}
